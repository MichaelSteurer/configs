{
    "title": "Keyboard Maestro",
    "rules": [
        {
            "description": "[Keyboard Maestro] caps_lock -> cmd+opt+shift",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {"key_code": "a", "modifiers": ["caps_lock"]},
                    "to": [{"key_code": "a", "modifiers": ["left_command", "left_option", "left_shift"]}]
                }, {
                    "type": "basic",
                    "from": {"key_code": "1", "modifiers": ["caps_lock"]},
                    "to": [{"key_code": "1", "modifiers": ["left_command", "left_option", "left_shift"]}]
                }
            ]
        }
    ]
}